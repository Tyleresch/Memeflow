// prisma/schema.prisma
// --------------------
// 1.  Datasource — points Prisma at your DB
// 2.  Generator  — produces the TypeScript client
// 3.  Models     — your domain schema
// --------------------

datasource db {
  provider = "sqlite"                // or postgres/mysql
  url      = env("DATABASE_URL")     // e.g. "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id         String     @id @default(cuid())
  wallet     String     @unique
  createdAt  DateTime   @default(now())
  proposals  Proposal[]
}

model Proposal {
  id         String   @id @default(cuid())
  onChainKey String   @unique
  title      String
  amount     Int
  createdAt  DateTime @default(now())

  // relation ---------
  creatorId  String
  creator    User   @relation(fields: [creatorId], references: [id])
}
